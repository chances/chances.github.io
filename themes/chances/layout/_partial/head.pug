head
  link(href="http://gmpg.org/xfn/11", rel="profile")
  meta(http-equiv="content-type", content="text/html; charset=utf-8")

  //- Enable responsiveness on mobile devices
  unless webapp
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1")

  - var title = page.title

  title
    if plain
      | #{title}
    else if is_index
      | #{site_title}
    else
      | #{title} &middot; #{site_title}

  //- CSS
  unless plain
    link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=PT+Serif:400,400italic,700|PT+Sans:400")
    link(rel="stylesheet", href="/assets/stylesheets/style.css")
    link(rel="stylesheet", href="/assets/stylesheets/devicons.min.css")
  if stylesheet
    link(rel="stylesheet", href="#{stylesheet}")

  //- JS
  if plain && javascript
    script(type="text/javascript", src="#{javascript}")

  //- Google Analytics
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    #{theme.google_analytics}
    ga('create', 'UA-60144685-1', 'auto');
    ga('send', 'pageview');
  </script>

  //- Icons and Theme
  if plain
    if webapp_name
      meta(name="apple-mobile-web-app-title", content="#{webapp_name}")
      meta(name="application-name", content="#{webapp_name}")
    if theme_color
      meta(name="theme-color", content="#{theme_color}")
    if webapp
      <meta name="apple-mobile-web-app-capable" content="yes" />
      <meta name="mobile-web-app-capable" content="yes">
      <meta name="viewport" content="minimal-ui, width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    if webapp_manifest
      link(rel="manifest", href="#{webapp_manifest}")
    if favicons_apple
      link(rel="apple-touch-icon-precomposed", sizes="144x144", href="#{favicons_apple}/apple-touch-icon-144-precomposed.png")
      link(rel="apple-touch-icon-precomposed", sizes="180x180", href="#{favicons_apple}/apple-touch-icon-180-precomposed.png")
    if favicons_ie
      <!--[if IE]>
        link(rel="shortcut icon", href="#{favicons.ie}")
      <![endif]-->
    if favicons_icon
      link(rel="icon", href="#{favicons.icon}")
  else
    <meta name="apple-mobile-web-app-title" content="Chance Snow">
    <meta name="application-name" content="Chance Snow">
    <meta name="theme-color" content="#ffffff">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/assets/images/touch/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="180x180" href="/assets/images/touch/apple-touch-icon-180-precomposed.png">
    <!--[if IE]><link rel="shortcut icon" href="/assets/favicon.ico"><![endif]-->
    <link rel="icon" href="/assets/favicon.png">

    //- RSS
    <link rel="alternate" type="application/rss+xml" title="RSS" href="/atom.xml">
